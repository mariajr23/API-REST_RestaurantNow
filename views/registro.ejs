<!doctype html>
<html lang="es">
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title>RestaurantNow</title>
  <link rel="stylesheet" href="/css/estilos.css">
  <link rel="icon" href="/favicon.png"/>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .form-signin {
      max-width: 500px;
      padding: 20px;
      margin: auto;
      background: white;
      border-radius: 8px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }
    .form-signin img {
      margin-bottom: 15px;
    }
    .form-floating label {
      margin-bottom: 0;
    }
    .btn-bg-black {
      background-color: #343a40;
      color: #fff;
    }
    .btn-bg-black:hover {
      background-color: #23272b;
      color: #fff;
    }
    .footer-logo {
      max-width: 50px;
    }
    .footer-text {
      color: #6c757d;
    }
    .nav-link {
      color: #343a40 !important;
    }
    .nav-link:hover {
      color: #007bff !important;
    }
    .text-center {
      text-align: center;
    }
  </style>
</head>
<body class="text-center">
  <nav class="container d-flex flex-wrap justify-content-center py-3 mb-4 text-dark border-bottom">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none text-dark">
      <span class="fs-4">RestaurantNow</span>
    </a>
    <ul class="nav nav-pills">
      <li class="nav-item"><a href="/restaurantes" class="nav-link text-dark" aria-current="page">Restaurantes</a></li>
      <% if (!user) { %>
        <li class="nav-item"><a href="/login" class="nav-link text-dark">Iniciar Sesión</a></li>
        <li class="nav-item"><a href="/registro" class="nav-link text-dark">Registrarse</a></li>
      <% } else { %>
        <li class="nav-item"><a href="/user/perfil" class="nav-link text-dark">Perfil</a></li>
        <li class="nav-item"><a href="/user/mis-pedidos" class="nav-link text-dark">Mis Pedidos</a></li>
        <li class="nav-item"><a href="/logout" class="nav-link text-dark">Cerrar Sesión</a></li>
      <% } %>
    </ul>
  </nav>
  <main class="login">
    <form class="form-signin" action="/registrar" method="POST">
      <img class="mb-4" src="/images/logo.png" alt="logo" width="80" height="auto">
      <h1 class="h3 mb-3 fw-normal">Únete a nosotros</h1>
      <div class="form-group mb-3">
        <label for="floatingNombre">Nombre</label>
        <input type="text" class="form-control" id="floatingNombre" placeholder="Nombre" name="nombre" required>
      </div>
      <div class="form-group mb-3">
        <label for="floatingApellido">Apellido</label>
        <input type="text" class="form-control" id="floatingApellido" placeholder="Apellido" name="apellido" required>
      </div>
      <div class="form-group mb-3">
        <label for="floatingEmail">Email</label>
        <input type="email" class="form-control" id="floatingEmail" placeholder="email@ejemplo.com" name="email" required>
      </div>
      <div class="form-group mb-3">
        <label for="floatingPassword">Contraseña</label>
        <input type="password" class="form-control" id="floatingPassword" placeholder="Contraseña" name="contrasena" required>
      </div>
      <div class="form-group mb-3">
        <label for="floatingPasswordConfirm">Confirmar Contraseña</label>
        <input type="password" class="form-control" id="floatingPasswordConfirm" placeholder="Confirmar Contraseña" name="contrasenaConfirmar" required>
      </div>
      <div class="form-group mb-3">
        <label for="floatingTelefono">Teléfono</label>
        <input type="text" class="form-control" id="floatingTelefono" placeholder="Teléfono" name="telefono" required>
      </div>
      <button class="btn btn-bg-black my-2" type="submit">Confirmar</button>
      <p class="mt-3">¿Ya tienes una cuenta? <a href="/login" class="text-primary">Inicia sesión</a></p>
    </form>
  </main>
  <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
    <div class="col-md-4 d-flex align-items-center">
      <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
        <img class="footer-logo" src="/images/Logo.png" alt="Logo">
      </a>
      <span class="footer-text">&copy; 2023 RestaurantNow</span>
    </div>
  </footer>
</body>
</html>
