<!DOCTYPE html>
<html lang="es">
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css"
    />
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>Admin Dashboard - RestaurantNow</title>
    <link href="../assets/css/estilos.css" rel="stylesheet" />
    <link href="../assets/css/main.css" rel="stylesheet" />

    <link rel="icon" href="/favicon.png" />
  </head>
  <body>
    <nav class="sidebar">
      <h4>Admin Menu</h4>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="/restaurante/reservas"
            >Gestionar Reservas</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/restaurante/platos">Gestionar Platos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/restaurante/perfil">Perfil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Cerrar Sesión</a>
        </li>
      </ul>
    </nav>
    <main>
      <div class="main-content">
        <header>
          <h1 class="text-center">Reservas</h1>
        </header>

        <h1 class="text-center my-4">Gestionar Reservas</h1>
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Nombre Cliente</th>
              <th>Teléfono Cliente</th>
              <th>Fecha</th>
              <th>Hora</th>
              <th>Precio</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% if (reservas && reservas.length > 0) { %> <%
            reservas.forEach(reserva => { %>
            <tr>
              <td><%= reserva.nombre_cliente %></td>
              <td><%= reserva.telefono_cliente %></td>
              <td><%= reserva.fecha %></td>
              <td><%= reserva.hora %></td>
              <td>$<%= reserva.precio %></td>
              <td>
                <a
                  href="/restaurante/reservas/aceptar/<%= reserva.id_reserva %>"
                  class="btn btn-success"
                  >Aceptar</a
                >
                <a
                  href="/restaurante/reservas/rechazar/<%= reserva.id_reserva %>"
                  class="btn btn-danger"
                  >Rechazar</a
                >
              </td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="7" class="text-center">
                No hay reservas pendientes
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>

        <h1 class="text-center my-4">Reservas Anteriores</h1>
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Nombre Cliente</th>
              <th>Teléfono Cliente</th>
              <th>Fecha</th>
              <th>Hora</th>
              <th>Precio</th>
              <th>Estado</th>
              <!-- Nueva columna para el estado -->
            </tr>
          </thead>
          <tbody>
            <% if (reservasAnteriores && reservasAnteriores.length > 0) { %> <%
            reservasAnteriores.forEach(reserva => { %>
            <tr>
              <td><%= reserva.nombre_cliente %></td>
              <td><%= reserva.telefono_cliente %></td>
              <td><%= reserva.fecha %></td>
              <td><%= reserva.hora %></td>
              <td>$<%= reserva.precio %></td>
              <td>
                <%= reserva.estado === 1 ? 'Pendiente' : reserva.estado === 2 ?
                'Aceptada' : 'Rechazada' %>
              </td>
              <!-- Estado mostrado aquí -->
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="6" class="text-center">
                No hay reservas anteriores
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
    <footer
      class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"
    >
      <div class="col-md-4 d-flex align-items-center">
        <a
          href="/"
          class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1"
        >
          <img
            class="mb-4"
            src="/images/Logo.jpg"
            alt="Logo"
            width="50%"
            height="50%"
          />
        </a>
        <span class="text-muted">&copy; 2023 RestaurantNow</span>
      </div>

      <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
        <li class="ms-3">
          <a class="text-muted" href="https://www.instagram.com/you_drive12/"
            ><svg class="bi" width="24" height="24">
              <use xlink:href="#instagram" /></svg
          ></a>
        </li>
        <li class="ms-3">
          <a
            class="text-muted"
            href="https://www.facebook.com/youdrive2/?show_switched_toast=0&show_invite_to_follow=0&show_switched_tooltip=0&show_podcast_settings=0&show_community_transition=0&show_community_review_changes=0&show_follower_visibility_disclosure=0"
            ><svg class="bi" width="24" height="24">
              <use xlink:href="#facebook" /></svg
          ></a>
        </li>
      </ul>
    </footer>

    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
