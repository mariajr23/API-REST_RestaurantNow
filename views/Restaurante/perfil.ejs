      href="/node_modules/bootstrap/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>RestaurantNow</title>
    <link href="../assets/css/estilos.css" rel="stylesheet" />
    <link rel="icon" href="/favicon.png" />
  </head>

  <body class="text-center">
    <nav class="sidebar">
      <h4>Admin Menu</h4>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="/restaurante/reservas"
            >Gestionar Reservas</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/restaurante/platos">Gestionar Platos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/restaurante/dashboard">Perfil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Cerrar Sesión</a>
        </li>
      </ul>
    </nav>
    <main>
      <div class="main-content">
        <h1 class="text-center">Configuración del Perfil</h1>
        <div class="row justify-content-center">
          <div class="col-md-8">
            <form action="/restaurante/perfil" method="POST">
              <div class="row mt-3">
                <label class="labels">Nombre</label>
                <input
                  type="text"
                  class="form-control"
                  name="nombre"
                  value="<%= user.nombre %>"
                  required
                />
                <div class="row mt-3">
                  <label class="labels">Descripción</label>
                  <input
                    type="text"
                    class="form-control"
                    name="descripcion"
                    value="<%= user.descripcion %>"
                    required
                  />
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md-12">
                  <label class="labels">Dirección</label>
                  <input
                    type="text"
                    class="form-control"
                    name="direccion"
                    value="<%= user.direccion %>"
                    required
                  />
                </div>
                <div class="col-md-12 mt-3">
                  <label class="labels">Teléfono</label>
                  <input
                    type="text"
                    class="form-control"
                    name="telefono"
                    value="<%= user.telefono %>"
                    required
                  />
                </div>
                <div class="col-md-12 mt-3">
                  <label class="labels">Estado (no editable)</label>
                  <input
                    type="text"
                    class="form-control"
                    value="<%= user.estado %>"
                    disabled
                  />
                </div>
              </div>
              <div class="mt-5 text-center">
                <button class="btn btn-primary profile-button" type="submit">
                  Guardar Cambios
                </button>
              </div>
            </form>
          </div>
          <div class="col-md-12 mt-5">
            <h4 class="text-center">Horario del Restaurante</h4>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Días de la Semana</th>
                  <th>Hora de Inicio</th>
                  <th>Hora de Fin</th>
                  <th>Acción</th>
                </tr>
              </thead>
              <tbody>
                <% if (horarios && horarios.length > 0) { %> <%
                horarios.forEach(horario => { %>
                <tr>
                  <td><%= horario.dias_semana %></td>
                  <td><%= horario.hora_inicio %></td>
                  <td><%= horario.hora_fin %></td>
                  <td>
                    <button
                      class="btn btn-warning btn-sm editar-horario"
                      data-id="<%= horario.id_horario %>"
                      data-dias="<%= horario.dias_semana %>"
                      data-inicio="<%= horario.hora_inicio %>"
                      data-fin="<%= horario.hora_fin %>"
                      data-bs-toggle="modal"
                      data-bs-target="#modalEditarHorario"
                    >
                      Editar
                    </button>
                  </td>
                </tr>
                <% }); %> <% } else { %>
                <tr>
                  <td colspan="4" class="text-center">
                    No hay horarios registrados.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Modal para editar horarios -->
          <div
            class="modal fade"
            id="modalEditarHorario"
            tabindex="-1"
            aria-labelledby="modalEditarHorarioLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <form action="/restaurante/editar-horario" method="POST">
                  <div class="modal-header">
                    <h5 class="modal-title" id="modalEditarHorarioLabel">
                      Editar Horario
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <input
                      type="hidden"
                      name="id_horario"
                      id="modalIdHorario"
                    />
                    <div class="mb-3">
                      <label for="modalDiasSemana" class="form-label"
                        >Días de la Semana</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="modalDiasSemana"
                        name="dias_semana"
                        placeholder="Ejemplo: 1,2,3"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="modalHoraInicio" class="form-label"
                        >Hora de Inicio</label
                      >
                      <input
                        type="time"
                        class="form-control"
                        id="modalHoraInicio"
                        name="hora_inicio"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="modalHoraFin" class="form-label"
                        >Hora de Fin</label
                      >
                      <input
                        type="time"
                        class="form-control"
                        id="modalHoraFin"
                        name="hora_fin"
                      />
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                      Guardar Cambios
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer>
      <article class="footer">
        <footer
          class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"
        >
          <article class="col-md-4 d-flex items-center">
            <a
              href="/"
              class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1"
            >
              <img class="footer-logo" src="/images/Logo.png" alt="Logo" />
            </a>
            <span class="text-muted">&copy; 2023 RestaurantNow</span>
          </article>
          <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3">
              <a
                class="text-muted"
                href="https://www.instagram.com/you_drive12/"
                ><svg class="bi" width="24" height="24">
                  <use xlink:href="#instagram" /></svg
              ></a>
            </li>
            <li class="ms-3">
              <a
                class="text-muted"
                href="https://www.facebook.com/youdrive2/?show_switched_toast=0&show_invite_to_follow=0&show_switched_tooltip=0&show_podcast_settings=0&show_community_transition=0&show_community_review_changes=0&show_follower_visibility_disclosure=0"
                ><svg class="bi" width="24" height="24">
                  <use xlink:href="#facebook" /></svg
              ></a>
            </li>
          </ul>
        </footer>
      </article>
    </footer>
    <script>
      document.querySelectorAll(".editar-horario").forEach((button) => {
        button.addEventListener("click", (event) => {
          const horarioId = event.target.dataset.id;
          const diasSemana = event.target.dataset.dias;
          const horaInicio = event.target.dataset.inicio;
          const horaFin = event.target.dataset.fin;

          document.getElementById("modalIdHorario").value = horarioId;
          document.getElementById("modalDiasSemana").value = diasSemana;
          document.getElementById("modalHoraInicio").value = horaInicio;
          document.getElementById("modalHoraFin").value = horaFin;

          console.log("id_horario asignado:", horarioId);
        });
      });
    </script>

    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
